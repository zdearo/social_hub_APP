      <nav class="container mx-auto flex justify-between">
        <a href="/" class="font-bold text-2xl">SocialHubApp</a>
        <a href="/posts" class="font-bold">Posts</a>
      </nav>
    </header>

    <main class="container mx-auto mt-28 px-5 flex">
      <%= yield %>
    </main>
