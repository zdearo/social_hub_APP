<div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
    <div class="w-full card w-96 bg-neutral shadow-xl md:mt-0 sm:max-w-md xl:p-0">
        <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
            <h1 class="text-xl font-bold leading-tight tracking-tight md:text-2xl">
                Cadastre sua conta
            </h1>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "space-y-4 md:space-y-6") do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <label>
                <div class="label">
                  <span class="label-text font-bold">Nome:</span>
                </div>
                <%= f.text_field :name, class: "input input-bordered w-full", placeholder: "Fulano da Silva", required: true %>
              </label>

              <label>
                <div class="label">
                  <span class="label-text font-bold">Email:</span>
                </div>
                <%= f.email_field :email, class: "input input-bordered w-full", placeholder: "fulano@email.com", required: true %>
              </label>

              <label>
                <div class="label">
                  <span class="label-text font-bold">Senha:</span>
                </div>
                <%= f.password_field :password, class: "input input-bordered w-full", placeholder: "••••••••", required: true %>
              </label>

              <label>
                <div class="label">
                  <span class="label-text font-bold">Confirme sua senha:</span>
                </div>
                <%= f.password_field :password_confirmation, class: "input input-bordered w-full", placeholder: "••••••••", required: true %>
              </label>

              <div class="flex my-5">
                <%= f.submit "Cadastrar", class: "btn btn-primary w-full" %>
              </div>
              
              <%= render "devise/shared/links" %>
              
            <% end %>
        </div>
    </div>
</div>
