
<%= turbo_frame_tag "post" do %>
<div class="w-full my-5 overflow-x-auto">
  <table class="table table-zebra table-pin-rows table-pin-cols">
    <thead>
      <tr>
        <th>user_id</th>
        <th>content</th>
        <th>created_at</th>
        <th>updated_at</th>
      </tr>
    </thead>
    
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.user_id %></td>
          <td><%= link_to post.content, post %></td>
          <td><%= post.created_at %></td>
          <td><%= post.updated_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<% end %>